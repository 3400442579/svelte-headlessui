{
  "name": "svelte-headlessui",
  "description": "HeadlessUI components for Svelte",
  "version": "0.0.1-alpha.2",
  "type": "module",
  "keywords": [
    "svelte",
    "component",
    "headless",
    "ui",
    "tailwindcss",
    "tailwindui",
    "renderless"
  ],
  "files": [
    "dist"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/captaincodeman/svelte-headlessui.git"
  },
  "author": {
    "name": "Simon Green",
    "email": "simon@captaincodeman.com",
    "url": "https://www.captaincodeman.com/"
  },
  "scripts": {
    "build": "tsup",
    "dev": "vite dev",
    "test": "vitest run src",
    "test:watch": "vitest src",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "sourcemap": "source-map-explorer dist/*.js"
  },
  "tsup": {
    "entry": [
      "src/lib/index.ts"
    ],
    "format": [
      "esm"
    ],
    "external": [
      "svelte/store"
    ],
    "sourcemap": true,
    "minify": true,
    "clean": true,
    "dts": true
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.1.3",
    "@types/testing-library__jest-dom": "^5.14.5",
    "autoprefixer": "^10.4.8",
    "happy-dom": "^6.0.4",
    "postcss": "^8.4.16",
    "postcss-load-config": "^4.0.1",
    "source-map-explorer": "^2.5.2",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.8",
    "tslib": "^2.4.0",
    "tsup": "^6.2.2",
    "typescript": "^4.7.4",
    "vite": "^3.0.8",
    "vitest": "^0.22.0"
  },
  "dependencies": {
    "svelte-transition": "^0.0.6"
  }
}